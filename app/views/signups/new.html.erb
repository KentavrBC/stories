<div class='new-header'>
  <img src='https://s3.amazonaws.com/codecademy-content/projects/z2d/stories/menu-white.svg' class='menu-btn'>
  <div class='container'>
    <h1>
      Get the latest updates from the stories
    </h1>
    <%= form_for(@new_signup) do|t| %>
    <div class='field'>
      <%= t.label :First_Name %><br>
      <%= t.text_area :firstname %>
    </div>
    <div class='field'>
      <%= t.label :email %><br>
      <%= t.text_area :email %>
    </div>
    <div class='action'>
      <%= t.submit "Join" %>
    </div>
    <% end %>
  </div>
</div>